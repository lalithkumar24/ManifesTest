{
  "manifest_version": 3,
  "name": "Your Extension Name",
  "version": "1.0",
  "icons": {
    "16": "icon/16.png",
    "32": "icon/32.png",
    "48": "icon/48.png",
    "96": "icon/96.png",
    "128": "icon/128.png"
  },
  "action": {
    "default_popup": "src/index.html"
  },
  "background": {
    "service_worker": "src/background.js"
  },

  "content_scripts": [
    {
      "matches": [
        "https://www.youtube.com/*",
        "https://m.youtube.com/*"
      ],
      "js": [
        "src/content-script/index.js"
      ]
    }
  ],

  "host_permissions": [
    "https://www.youtube.com/*",
    "https://m.youtube.com/*"
  ]
}
